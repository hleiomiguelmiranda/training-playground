pipeline {
    agent none
    stages {
        stage('java') {
            agent {
                dockerfile {
                    dir '003 - Defining Execution Environments'
                    filename '004 - JAVA'
                }
            }
            steps {
                sh "mvn -version"
            }
        }
        stage('node') {
            agent {
                dockerfile {
                    dir '003 - Defining Execution Environments'
                    filename '003 - Defining Execution Environments/04 - NPM'
                }
            }
            steps {
                sh "node -v"
            }
        }
    }
}
