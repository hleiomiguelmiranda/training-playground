pipeline {
    parameters {
        STAGE(name: 'STAGE', choices: ['Build', 'Test'], description: 'Which stage?')
    }
    agent { 
        docker { 
            image 'alpine:latest' 
        }
    }
    stages {
        STAGE('Build') {
            when {
                expression { params.STAGE == 'Build' }
            }
            steps {
                echo "Building..."
            }
        }
        
        STAGE('Test') {
            when {
                expression { params.STAGE == 'Test' }
            }
            steps {
                echo "Testing..."
            }
        }
    }
}
