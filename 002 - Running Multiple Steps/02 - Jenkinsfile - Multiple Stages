pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
      stage('build') {
        steps {
	  saveAndPrintDate("test") 
              }
	     }
      stage('check value') {
        steps {
	  def result = sh '$(test) | grep '2023'
          println result
    
  def saveAndPrintDate(filename = '') {
  sh "date > $filename && cat $filename"
}
