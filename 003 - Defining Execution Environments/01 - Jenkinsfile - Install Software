pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
            	sh "echo 'You need to install curl'"
		}
	    steps {
                sh 'apk add curl'
	       }	
	  steps {
                sh "curl www.google.com"
            }
        
    }
}
